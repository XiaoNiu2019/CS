<div class="jumbotron pt-1" >
    <h1 class="display-2">Calend Me</h1>

    <h3 >A cool app to plan nice stuff</h3>
</div>

<h2>Authentification</h2>

{{#if register}}
    <div class="alert alert-primary" role="alert">
        <strong>Welcome, you have been registered. Your login is : {{register}}</strong> Please sign in.
    </div>
{{/if}}

{{#if result}}
    <div class="alert alert-danger" role="alert">
        <strong>Authentification failed</strong> Change a few things up and try submitting again.
    </div>
{{/if}}

<form action="/calendme/auth" method="post">
    <div class="form-group">
        <label>Login:</label>
        <input type="text" class="form-control" name="login">
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input type="password" class="form-control" name="password">
    </div>
    <div class="d-inline-block">
        <button type="submit" class="btn btn-primary">Connect</button>
    </div>
    <div class="d-inline-block">
        <a href="auth/newUser"  class="btn btn-link">Register</a>
    </div>
</form>


